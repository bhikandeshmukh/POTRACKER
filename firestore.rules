rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Vendors collection
    match /vendors/{vendorId} {
      allow read, write: if request.auth != null;
    }
    
    // Purchase Orders collection - regular structure
    match /purchaseOrders/{poId} {
      allow read, write: if request.auth != null;
      
      // Organized subcollection structure: purchaseOrders/{vendorId}/years/{year}/months/{month}/pos/{poNumber}
      match /years/{year} {
        allow read, write: if request.auth != null;
        
        match /months/{month} {
          allow read, write: if request.auth != null;
          
          match /pos/{poNumber} {
            allow read, write: if request.auth != null;
          }
        }
      }
    }
    
    // Shipments collection
    match /shipments/{shipmentId} {
      allow read, write: if request.auth != null;
    }
    
    // Audit logs collection
    match /auditLogs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow access to any subcollection under any document (wildcard)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
